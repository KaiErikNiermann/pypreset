        run: pytest --cov={{ project.package_name }} --cov-report=xml --cov-report=term-missing

      - name: Upload coverage reports
        uses: codecov/codecov-action@v4
        with:
          file: ./coverage.xml
          fail_ci_if_error: false
{% else %}
      - name: Run tests
        run: pytest -v
{% endif %}
{% elif testing.framework == "unittest" %}
